%h1 Bla

- require "formular/frontend/bootstrap3"
= Formular::Bootstrap3::Builder.new(model: model, errors: {}).form(config) do |f|
  = '<input type="hidden" name="_method" value="PATCH">' unless model.model.new?

  .row
    = f.input :title, placeholder: "Title"

  -# 3.times do |i|
  - #f.nested :content do |c|
  .row
    = f.textarea :tags, placeholder: "Tags", rows: 1

  = f.nested :notes do |n|
    = n.input :id, type: :hidden
    = n.textarea :text, placeholder: "Note", rows: 4


  .row
    = f.button type: "Submit", class: ["btn btn-primary"]



%pre.row
  = model.model.content
